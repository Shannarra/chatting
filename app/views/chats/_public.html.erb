<div class="text-center ">
	<% if current_user.chats.count.zero? %>
	  <h2 class="text-2xl py-2">Seems like you are part of no chats.</h2>
	  <h2 class="text-2xl py-2">You can enter a public chat if you want</h2>
	<% else %>
	  <h2 class="text-2xl py-2">List of publicly available chats</h2>
	<% end %>
	<div id="chats" class="grid grid-cols-1 sm:grid-cols-3 grid-flow-row gap-5 justify-center sm:justify-between">
		<% chats.each do |chat| %>
		<div class="text-center sm:text-left mb-5 sm:mx-5 shadow sm:mr-5 hover:shadow-2xl hover:cursor-pointer flex-row">
			<div class="flex-col bg-white">
				<h1 class="text-2xl p-5">
					<p>Chat: <%= chat.name %></p>
					<%= button_to 'Enter chat!', enroll_chat_url(chat), method: :post, class: 'btn-success' %>
					<span class='text-sm p-0'>(<%= chat.users.count %> total users)</span>
				</h1>
			</div>

		</div>  
		<% end %>
	</div>
</div>
